@model Road
@{
    ViewBag.Title = "Update";
}

<div class="container">
    <h2>Güncelleme</h2>

    @using (Html.BeginForm("Update", "Road", FormMethod.Post))
    {
        <label class="form-group">Mahalle:</label>
        @Html.DropDownListFor(m => m.DistricID, null, htmlAttributes: new { @class = "form-control" })
        <label class="form-group">Cadde:</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

        <button type="submit" class="btn-success">Güncelle</button>
    }
</div>