@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Kategoriler</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Kategori Adı</th>
                <th>Açıklaması</th>
                <th>Durumu</th>
                <th>Sil/Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category item in Model)
            {
                <tr>
                    @if (item.ImagePath != null)
                    {
                        <td>
                            <img width="30" height="30" src="~/Content/Uploads/@item.ImagePath" />
                        </td>
                    }
                    else
                    {
                        <td>
                            <img width="30" height="30" src="~/Content/Uploads/Categories/logo-icon.png" />
                        </td>
                    }
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>
                    <td>
                        @Html.ActionLink("Sil", "Delete", "Category", new { id = item.ID }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Güncelle", "Update", "Category", new { id = item.ID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Alt Kategorileri", "Index", "SubCategory", new { id = item.ID }, new { @class = "btn btn-default" })

                    </td>
                </tr>

            }
        </tbody>
        <tr>
            <th>
                @Html.ActionLink("Ekle", "Insert", "Category", null, new { @class = "btn btn-info" })

            </th>
        </tr>
    </table>
</div>
