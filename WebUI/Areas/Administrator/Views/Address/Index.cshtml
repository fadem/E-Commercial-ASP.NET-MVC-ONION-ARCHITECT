@model List<Address>
@{
    ViewBag.Title = "Index";
}


<div class="container">
    <h2> Adres Kayıtları</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Üye</th>
                <th>İl</th>
                <th>İlçe</th>
                <th>Mahalle</th>
                <th>Posta Numarası</th>
                <th>Cadde</th>
                <th>Sokak</th>
                <th>Bina Adı</th>
                <th>Sil/Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Address item in Model)
            {
                <tr>
                    <td>@item.AppUser.Name</td>
                    <td>@item.Province.Name</td>
                    <td>@item.RegionTo.Name</td>
                    <td>@item.District.Name</td>
                    <td>@item.District.PostalCode</td>
                    <td>@item.Road.Name</td>
                    <td>@item.Street.Name</td>
                    <td>@item.Build.Name</td>
                    <td>
                        @Html.ActionLink("Sil", "Delete", "Address", new { id = item.ID }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Güncelle", "Update", "Address", new { id = item.ID }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
