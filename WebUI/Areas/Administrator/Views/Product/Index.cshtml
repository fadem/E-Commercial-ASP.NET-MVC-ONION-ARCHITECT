@model List<Product>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Ürünlerim</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Fiyat</th>
                <th>Puanlama</th>
                <th>1.Kategori</th>
                <th>2.Kategori</th>
                <th>3.Kategori</th>
                <th>Marka</th>
                <th>Durumu</th>
                <th>Sil/Güncelle/Detay/Resim</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Point</td>
                    <td>@(item.Category != null ? item.Category.CategoryName : "-")</td>
                    <td>@(item.SubCategory != null ? item.SubCategory.SubCategoryName : "-")</td>
                    <td>@(item.ThirdCategory != null ? item.ThirdCategory.ThirdCategoryName : "-")</td>
                    <td>@(item.Brand != null ? item.Brand.Name : "-")</td>
                    <td>@item.Status</td>
                    <td>
                        @Html.ActionLink("Sil", "Delete", "Product", new { id = item.ID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Güncelle", "Update", "Product", new { id = item.ID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Detay", "Index", "ProductDetail", new { id = item.ID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Resim", "Index", "ImagePath", new { id = item.ID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Kampanya", "Index", "Campaing", new { id = item.ID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Yorumlar", "Index", "Comment", new { id = item.ID }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }

        </tbody>
    </table>
    @Html.ActionLink("Ekle", "Insert", "Product", new { id = ViewBag.AppUserID }, new { @class = "btn btn-default" })

</div>
