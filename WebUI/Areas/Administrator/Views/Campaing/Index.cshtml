@model List<Campaing>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>@ViewBag.ProductName ürününe ait kampanyalar</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>İndirim(%)</th>
                <th>Açıklama</th>
                <th>Durumu</th>
                <th>Sil / Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count < 1)
            {
                <tr>
                    <td>
                        Bu ürüne ait herhangi bir kampanya bulunmamaktadır, kampanya oluşturmak için "Ekle" butonuna tıklayınız
                    </td>
                </tr>
            }
            else
            {
                foreach (Campaing item in Model)
                {
                    <tr>
                        <td>@item.Discount</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        <td>
                            @Html.ActionLink("Sil", "Delete", "Campaing", new { item.ID }, new { @class = "btn btn-danger" })
                            @Html.ActionLink("Güncelle", "Update", "Campaing", new { item.ID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
    @Html.ActionLink("Ekle", "Insert", "Campaing", new { id = ViewBag.ProductID }, new { @class = "btn btn-info" })

</div>
