@model ThirdCategory
@{
    ViewBag.Title = "Update";
}

<div class="container">
    <h2>Güncelle</h2>

    @using (Html.BeginForm("Update", "ThirdCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="col-md-6">
        <label class="form-group">Üst Kategori Adı:</label>
        @Html.DropDownListFor(m => m.SubCategoryID, null, htmlAttributes: new { @class = "form-control input-text" })
        <label class="form-group">Kategori Adı:</label>
        @Html.TextBoxFor(m => m.ThirdCategoryName, new { @class = "form-control input-text" })
        <label class="form-group">Açıklaması:</label>
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control input-text" })
        <label class="form-group">Kategori Resmi:</label>
        <input type="file" name="resim" />
        <button type="submit" class="btn-success">Güncelle</button>

    </div>
     
    }
</div>
