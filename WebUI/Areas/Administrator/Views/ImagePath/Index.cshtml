@model List<ImagePath>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Ürün Resimleri - @ViewBag.ProductName</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        @if (Model.Count < 1)
        {
            <tr>
                <td colspan="5" align="center">
                    Ürüne ait resim bulunmamaktadır, eklemek için "Ekle" butonuna tıklayınız.
                </td>
            </tr>
        }
        else
        {
            <tr>
                @foreach (ImagePath item in Model)
                {

                    <td>
                        <img height="100" width="100" src="~/Content/Uploads/@item.ProductImage" />
                        @Html.ActionLink("Sil", "Delete", "ImagePath", new { item.ID }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Güncelle", "Update", "ImagePath", new { item.ID }, new { @class = "btn btn-default" })
                        <article style="color:#125281"> Durumu: @item.Status</article>
                    </td>

                }
            </tr>

        }
    </table>
    @Html.ActionLink("Ekle", "Insert", "ImagePath", new { id = ViewBag.ProductID }, new { @class = "btn btn-default" })
</div>
