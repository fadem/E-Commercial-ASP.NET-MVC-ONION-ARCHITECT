@model List<Message>
@{
    ViewBag.Title = "Messages";
}

<div class="container">
    <h2>Mesajlar</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Üye Adı</th>
                <th>Mail Adresi</th>
                <th>Mesajı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Message item in Model)
            {
                <tr>
                    <td>@(item.AppUser != null ? item.AppUser.Name : "-")</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.MemberMessage</td>
                </tr>
            }
        </tbody>
    </table>
</div>
